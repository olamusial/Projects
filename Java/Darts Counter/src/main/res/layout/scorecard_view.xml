<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ScorecardView"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playerTitle"
        android:textSize="@dimen/titleSize"
        android:gravity="center"
        android:textColor="@color/navigationTextColor"
        android:layout_marginTop="@dimen/bigMargin"
        android:text="" />

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallMargin"
        android:textColor="@color/navigationTextColor"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/scoreSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin">

        <Button
            android:layout_width="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/navigationTextColor"
            android:background="@drawable/navigation_button"
            android:layout_marginHorizontal="@dimen/smallMargin"
            android:id="@+id/throw1"/>

        <Button
            android:layout_width="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/navigationTextColor"
            android:background="@drawable/navigation_button"
            android:layout_marginHorizontal="@dimen/smallMargin"
            android:id="@+id/throw2"/>

        <Button
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/navigationTextColor"
            android:background="@drawable/navigation_button"
            android:layout_marginHorizontal="@dimen/smallMargin"
            android:id="@+id/throw3"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/smallMargin"
        android:layout_weight="1"
        android:textColor="@color/navigationTextColor"
        android:scrollbars="none">

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"></TableLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/smallMargin"
        android:layout_marginBottom="@dimen/smallMargin">

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin"
            android:text="@string/previous_button"
            android:textColor="@color/navigationTextColor"
            android:background="@drawable/navigation_button"
            android:id="@+id/previous"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin"
            android:text="@string/next_button"
            android:textColor="@color/navigationTextColor"
            android:background="@drawable/navigation_button"
            android:id="@+id/next"/>

    </LinearLayout>

</LinearLayout>